<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient
                android:type="linear"
                android:startColor="@color/light_grey"
                android:endColor="@color/light_grey"
                android:centerColor="@color/light_grey"
                android:angle="90"
                android:gradientRadius="90"
                />
            <!--apply a border around button-->
            <stroke android:color="@color/light_grey" android:width="2dp" />
            <!-- make the button corners rounded-->
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>