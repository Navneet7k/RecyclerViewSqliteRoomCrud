<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/popupLayout"
    android:layout_width="wrap_content"
    android:background="#23b14d"
    android:layout_height="wrap_content">
<!--    <com.airbnb.lottie.LottieAnimationView-->
<!--        android:id="@+id/progress"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        app:lottie_autoPlay="true"-->
<!--        android:layout_below="@+id/newOrderLayout"-->
<!--        app:lottie_fileName="bell.json"-->
<!--        app:lottie_loop="true" />-->
    <ImageButton
        android:id="@+id/closeDismiss"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@+id/closeDismiss"
        android:padding="20dp"
        android:id="@+id/newOrderLayout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/zingLogoIM"
            android:src="@drawable/ic_zing_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/newOrderLayout"/>
        <TextView
            android:visibility="gone"
            android:textSize="18sp"
            android:text="New Order"
            android:padding="10dp"
            android:textColor="@color/vrob_clr_white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newOrderLayout"
        android:id="@+id/newOrdersNo"
        android:textSize="24sp"
        android:textColor="@color/vrob_clr_white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_below="@+id/newOrdersNo"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/clickDismiss"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:text="Click to view new Orders!"
        android:textColor="@color/vrob_clr_white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
</RelativeLayout>